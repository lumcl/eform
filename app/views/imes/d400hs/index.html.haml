%h3= t('attributes.imes_d400h')

%h5
  = link_to t('new_imes_d400h'), new_imes_d400h_path

= form_tag(imes_d400hs_url, method: 'get', class: 'form-inline') do
  = text_field_tag :name, nil, placeholder: t('attributes.name'), class: 'form-control input-sm', value: params[:name]
  = button_tag class: 'btn btn-success btn-form-submit', type: 'button' do
    %span.glyphicon.glyphicon-search

.table-responsive
  %table.table.table-hover.table-condensed.table-bordered
    %thead
      %tr
        %th= t('action')
    %tbody
      - @imes_d400hs.each do |imes_d400h|
        %tr
          %td
            = link_to t('edit'), edit_imes_d400h_path(imes_d400h)
            |
            = link_to t('delete'), imes_d400h, :method => :delete, :data => { :confirm => t('confirm_delete')}


%h5
  = link_to t('new_imes_d400h'), new_imes_d400h_path

= paginate @imes_d400hs unless @imes_d400hs.empty?